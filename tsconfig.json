{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2015", "DOM"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./utils/**/*", "./utils/*", "./index.ts"]
}